  ],
  "author": "Nav-data Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nav-data/docs.git"
  },
  "homepage": "https://nav-data.github.io/docs",
  "bugs": {
    "url": "https://github.com/nav-data/docs/issues"
  },
  "devDependencies": {
    "mermaid": "^11.9.0",
    "prettier": "^3.6.2",
    "vitepress": "^1.6.3",
    "vitepress-plugin-mermaid": "^2.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
